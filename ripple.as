package {		import flash.display.MovieClip;	import flash.events.*;	import flash.text.*;		public class ripple extends MovieClip {				public var thescoretextfield;		public var thescoretextformat:TextFormat = new TextFormat();				public function ripple(score:String) {			this.addEventListener(Event.ENTER_FRAME,checkFrame);			(thescoretextfield.score as TextField).embedFonts = true;			thescoretextformat.font = Config.getInstance().timetableFont.fontName;			thescoretextfield.score.text = score;			(thescoretextfield.score as TextField).setTextFormat(thescoretextformat);		}				public function checkFrame(e:Event) {			if(this.currentFrame == 18) {				this.stop();				this.parent.removeChild(this);				this.removeEventListener(Event.ENTER_FRAME,checkFrame);			}		}			}		}